                    <span id="generated-projects-counter" class="text-gray-900 font-extrabold text-6xl">0</span><span class="text-gray-900 font-extrabold text-4xl lg:text-6xl"> <%= t("home.headline.subtitle") %> </span>
                </h1>
                <p class="mx-auto text-base text-gray-500 sm:text-5xl lg:text-xl mt-5 max-w-3xl">
                    <%= t("home.headline.p1") %>
                    </br>
                    <%= t("home.headline.p2") %>
                </p>
            </div>
        </div>


        <!-- Daily stats -->

