<!-- Daily stats -->

<div id="wrapper" class="max-w-xl px-4 py-4 mx-auto mt-8">
    <div class="sm:grid sm:h-32 sm:grid-flow-row sm:gap-4 sm:grid-cols-3">
        <div id="jh-stats-positive" class="flex flex-col justify-center px-4 py-4 bg-white border border-gray-300 rounded">
            <div>
                <p class="text-3xl font-semibold text-center text-gray-800">
                    <%= CommandEvent.where("name = 'generate' AND created_at >= ?", 1.day.ago.to_datetime).count %>
                </p>
            </div>
            <p class="text-lg text-center text-gray-500"><%= t("home.stats.today_generated") %></p>
        </div>

        <div id="jh-stats-negative" class="flex flex-col justify-center px-4 py-4 mt-4 bg-white border border-gray-300 rounded sm:mt-0">
            <div>
                <p class="text-3xl font-semibold text-center text-gray-800">
                    <%= CommandEvent.where("name = 'focus' AND created_at >= ?", 1.day.ago.to_datetime).count %>
                </p>
                <p class="text-lg text-center text-gray-500"><%= t("home.stats.today_focused") %></p>
            </div>
        </div>

        <div id="jh-stats-neutral" class="flex flex-col justify-center px-4 py-4 mt-4 bg-white border border-gray-300 rounded sm:mt-0">
            <div>
                <p class="text-3xl font-semibold text-center text-gray-800">
                    <%= CommandEvent.where("name = 'cache' AND subcommand = 'warm' AND created_at >= ?", 1.day.ago.to_datetime).count %>
                </p>
                <p class="text-lg text-center text-gray-500"><%= t("home.stats.today_cache") %></p>
            </div>
        </div>
    </div>
</div>

