            <div class="sm:grid sm:h-32 sm:grid-flow-row sm:gap-2 sm:grid-cols-3">
                <div id="jh-stats-positive" class="space-y-4 flex flex-col justify-center p-4 mt-4 border border-gray-300 rounded sm:mt-0 bg-gradient-to-b from-purple-500 to-purple-600">
                    <div class="flex-1 font-semibold text-center text-white text-3xl">
                        <%= CommandEvent.where("name = 'generate' AND created_at >= ?", 1.day.ago.to_datetime).count %>
                    </div>
                    <p class="text-white text-center bg-purple-800 bg-opacity-50 hover:bg-opacity-75 transition-colors duration-200 rounded-xl font-semibold p-2"><%= t("home.stats.today_generated") %></p>
                </div>

                <div id="jh-stats-negative" class="space-y-4 flex flex-col justify-center p-4 mt-4 border border-gray-300 rounded sm:mt-0 bg-gradient-to-b from-pink-500 to-pink-600">
                    <p class="flex-1 font-semibold text-center text-white text-3xl">
                        <%= CommandEvent.where("name = 'focus' AND created_at >= ?", 1.day.ago.to_datetime).count %>
                    </p>
                    <div class="text-white text-center bg-pink-800 bg-opacity-50 hover:bg-opacity-75 transition-colors duration-200 rounded-xl font-semibold p-2"><%= t("home.stats.today_focused") %></div>
                </div>

                <div id="jh-stats-neutral" class="flex space-y-4 flex-col justify-center p-4 mt-4 border border-gray-300 rounded sm:mt-0 bg-gradient-to-b from-green-500 to-green-600">
                    <div class="flex-1 font-semibold text-center text-white text-3xl">
                        <%= CommandEvent.where("name = 'warm' AND created_at >= ?", 1.day.ago.to_datetime).count %>
